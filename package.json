{
  "name": "design-system",
  "version": "1.0.0",
  "description": "Production-ready Vue 3 design system with Figma integration",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd vue-components && vite",
    "build": "cd vue-components && vite build",
    "build:lib": "cd vue-components && vite build --mode lib",
    "build:storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "test": "cd vue-components && vitest",
    "test:coverage": "cd vue-components && vitest --coverage",
    "test:run": "cd vue-components && vitest --run",
    "lint": "cd vue-components && eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "cd vue-components && eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "cd vue-components && vue-tsc --noEmit",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "mcp-sync": "tsx scripts/mcp-sync.ts"
  },
  "dependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@iconify/json": "^2.2.170",
    "@storybook/addon-a11y": "^9.0.13",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-links": "^9.0.13",
    "@storybook/test-runner": "^0.23.0",
    "@storybook/vue3": "^9.0.13",
    "@storybook/vue3-vite": "^9.0.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.17",
    "axe-core": "^4.8.4",
    "chromatic": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "storybook": "^9.0.13",
    "tailwindcss": "^4.0.0-alpha.25",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}